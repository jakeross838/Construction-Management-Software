{
  "name": "ross-built-cms",
  "version": "1.0.0",
  "description": "Ross Built Construction Management Software",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "stop": "node server/stop.js",
    "restart": "node server/stop.js && node server/index.js",
    "dev": "node server/index.js",
    "migrate": "node server/migrate.js",
    "migrate:status": "node server/migrate.js --status",
    "migrate:force": "node server/migrate.js --force",
    "db:start": "node server/migrate.js && node server/index.js",
    "test": "npx playwright test",
    "test:budget": "npx playwright test tests/budget-projected.spec.js",
    "test:sidebar": "npx playwright test tests/sidebar-navigation.spec.js",
    "test:ui": "npx playwright test --ui",
    "test:report": "npx playwright show-report",
    "restamp": "node server/restamp-invoices.js",
    "restamp:dry": "node server/restamp-invoices.js --dry-run"
  },
  "author": "Ross Built Custom Homes",
  "license": "UNLICENSED",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.0",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "pg": "^8.16.3",
    "playwright": "^1.57.0"
  }
}
